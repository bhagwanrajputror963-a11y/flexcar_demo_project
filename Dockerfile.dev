# Development Dockerfile for Rails
FROM ruby:3.3.6-slim

# Install dependencies
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
      build-essential \
      curl \
      git \
      libjemalloc2 \
      libpq-dev \
      libvips \
      libyaml-dev \
      pkg-config \
      postgresql-client && \
    rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Set working directory
WORKDIR /rails

# Install bundler
RUN gem install bundler

# Copy the local flexcar_promotions gem
COPY --from=flexcar_promotions_source . /flexcar_promotions

# Copy Gemfile
COPY Gemfile Gemfile.lock ./

# Install gems (this will clone the git gem)
RUN bundle install

# Copy application code
COPY . .

# Re-run bundle install to ensure git gems are properly linked
RUN bundle install

# Copy and set entrypoint
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Set environment variables
ENV RAILS_ENV=development \
    BUNDLE_PATH="/usr/local/bundle"

# Expose port 3000
EXPOSE 3000

# Set entrypoint
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]

# Start rails server
CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0"]
